{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "ignoreComments": false
      }
    ],
    "react/jsx-indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-multi-spaces": [
      "error",
      {
        "ignoreEOLComments": true
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_|^e$",
        "varsIgnorePattern": "^_|^e$"
      }
    ]
  }
}